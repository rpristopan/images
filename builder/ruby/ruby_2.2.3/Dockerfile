FROM bradrydzewski/base

WORKDIR /home/ubuntu
USER ubuntu
ADD rbenv.sh /etc/drone.d/

# we already install ruby 2.2.3 in the base image
# so we'll comment this out for now
RUN export PATH=$PATH:/home/ubuntu/.rbenv/bin                                         && \
    cd ~/.rbenv/plugins/ruby-build                                                    && \
    git pull                                                                          && \
    export RBENV_VERSION=2.2.3                                                        && \
    eval "$(rbenv init -)"                                                            && \
    CC=gcc rbenv install 2.2.3                                                        && \
    rbenv rehash                                                                      && \
    rbenv global 2.2.3                                                                && \
    rbenv rehash                                                                      && \
    gem install bundler                                                               && \
    rbenv rehash